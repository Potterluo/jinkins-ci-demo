FROM python:3.11-slim

WORKDIR /app

# Set PYTHONPATH to include current directory
ENV PYTHONPATH=/app

# 配置阿里云APT镜像源加速系统包下载
RUN sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources && \
    apt-get update && \
    apt-get install -y --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -i https://mirrors.aliyun.com/pypi/simple/ --trusted-host mirrors.aliyun.com \
    --timeout 120 --retries 3 -r requirements.txt

COPY . .

# Create reports directory
RUN mkdir -p tests/reports

CMD ["pytest", "-v", "--tb=short", "--html=tests/reports/test_report.html", "--alluredir=tests/reports/allure-results"]